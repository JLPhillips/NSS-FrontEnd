%html{lang: 'en'}
  %head
    %meta{charset: 'utf-8'}
    %title Photoshop Lite
    %link{rel: 'stylesheet', href: 'css/normalize.css'}
    %link{rel: 'stylesheet', href: 'css/style.css'}
  %body
    %h1 PHOTOSHOP LITE
    #form
      %input#color{type: "text", placeholder: "Enter Color Here", autofocus: true}
