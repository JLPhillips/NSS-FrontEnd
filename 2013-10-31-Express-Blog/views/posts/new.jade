extends ../template/layout
include ../mixins/form-helper

block content
  .row
    .small-2.columns
      h1.subheader New
    #navbar
      .small-2.columns
        a.button.radius.small.expand(href="/posts") Posts
      .small-8.columns
  .row
    .small-12.columns
      form(action='/posts', method='post')
        .row
          mixin field(4, 'title', '', "Title", null, true)
          mixin field(4, 'author', '', "Author", null, false)
          mixin field(4, 'date', '', "Date", date)
        .row
          mixin field(6, 'tags', '', "Tags")
          mixin field(6, 'image', '', "Image")
        .row
          .small-12.columns
            textarea(name="content", placeholder="Enter Blog Content Here")
        .row
          .small-2.columns.small-offset-8: a.button.radius.alert.small.expand(href='/movies') Cancel
          .small-2.columns: button.radius.success.small.expand(type='submit') Post